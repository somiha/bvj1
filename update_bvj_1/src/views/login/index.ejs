<%- include('../partials/head') %>
  <body class="bg-light">
    <%- include('../partials/top-navbar') %> 
    <div class="container-fluid pt-4 px-md-0 p-4">
      <div class="row">
        <%- include('../partials/left-sidebar') %> 
        <div class="col-md-7 pb-4 text-justify d-flex align-items-center justify-content-center">
          <div class="card rounded max-width-400">
            <div class="card-body">
              <h2 class="text-center textxl lg:text-3xl font-medium mb-2">Login</h2>
              <hr class="w-50 mx-auto mb-2" />
              <form action="#">
                <div class="form-group">
                  <label for="email">
                    <i class="fas fa-envelope textBlue"></i> Email
                  </label>
                  <input 
                    type="text" 
                    class="form-control"
                    name="email"
                    id="email" 
                    placeholder="Email"
                    required
                    data-regFormInput
                  />
                </div>
                <div class="form-group">
                  <label for="password">
                    <i class="fas fa-lock textBlue"></i> Password
                  </label>
                  <input
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    placeholder="Password"
                    required
                    data-regFormInput
                  />
                </div>
                <div class="form-group d-flex justify-content-center">
                  <button
                    type="button"
                    id="loginbtn"
                    class="btn bg-primary w-50 text-white hover:brightness-95 btn-transition"
                  ><div id="spinner" class="hidden spinner-border text-light h-5 w-5 mr-2" role="status"></div>Login Now</button>
                </div>
                <div class="form-group d-block">
                  <div class="row">
                    <div class="col-12">
                      <span class="text-right d-block">
                        <a href="/login/forgot-password" class="text-primary">Forget password?</a>
                      </span>
                    </div>
                  </div>
                </div>
              </form>
              <h6 class="text-center pb-3 font-semibold">
                Don't have an account? <a href="/register" class="text-primary">Register now</a>
              </h6>
            </div>
          </div>
        </div>
        <%- include('../partials/right-sidebar') %> 
      </div>
    </div>

    <!-- This is success animation modal  -->
    <div id="success" class="opacity-0 pointer-events-none fixed top-0 right-0 h-screen flex w-full justify-center items-center bg-black/40 z-50 transition-all duration-75 ease-in">
    </div>
    <!-- End of success animation modal  -->

    <script src="/js/modules/login/login.script.js" type="module"></script>
    <script src="/js/floating-success-menu.js" type="module"></script>

    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/app.js"></script>
  </body>
</html>

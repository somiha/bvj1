<%- include('../partials/head') %>

<body class="bg-light">
  <%- include('../partials/top-navbar') %>
  <div class="container-fluid pt-4 px-md-0 p-4">
    <div class="row">
      <%- include('../partials/left-sidebar') %>
      <div class="col-md-7 text-justify">
        <span class="h2 d-block pb-3"> Submit New Paper </span>
        <!-- <div class="alert alert-info" role="alert">
            You have 1 paper(s) in draft. <a href="/submit?draft=true" class="text-primary">Click here</a> to continue publish.
          </div> -->
        <div class="container">
          <div class="tab-content" id="nav-tabContent">
            <form action="" method="post" contentType="application/json; charset=utf-8">
              <div class="form-group pt-3">
                <label for="title"> Title* </label>
                <input type="text" class="form-control" name="title" required placeholder="Title of your Article"
                  data-formInput />
              </div>
              <div class="form-group">
                <label for="typeSelect"> Type* </label>
                <select name="type" class="custom-select mr-sm-2" id="typeSelect" data-formInput>
                  <option value="1" selected>Editorial</option>
                  <option value="2">Review Article</option>
                  <option value="3">Research Article</option>
                  <option value="4">Clinical Article</option>
                  <option value="4">Case Report</option>
                </select>
              </div>
              <div class="form-group">
                <label for="abstract"> Abstract* </label>
                <textarea name="abstract" id="abstract" class="form-control" cols="30" rows="5" required
                  data-formInput></textarea>
              </div>
              <div class="form-group">
                <label for="keywords"> Enter Keywords* </label>
                <textarea name="keywords" id="abstract" class="form-control" cols="30" rows="3"
                  placeholder="Ex. - key1, key2, key3" required data-formInput></textarea>
              </div>
              <!-- <div class="form-group">
                  <label for="additional"> Additional Information </label>
                  <textarea
                    name="additional_information"
                    id="additional"
                    class="form-control"
                    cols="30"
                    rows="5"
                    data-formInput
                  ></textarea>
                </div>
                <div class="form-group">
                  <label for="comments"> Comments </label>
                  <textarea
                    name="comments"
                    id="comments"
                    class="form-control"
                    cols="30"
                    rows="5"
                    data-formInput
                  ></textarea>
                </div> -->
              <div class="text-center pb-4" id="nextAuthors">
                <button class="btn btn-primary">Next
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <%- include('../partials/right-sidebar') %>
    </div>
  </div>
  <%- include('../partials/footer') %>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"

<%- include('../../partials/head') %>
  <body class="bg-light">
    <%- include('../../partials/top-navbar') %> 
    <div class="container-fluid pt-4 px-md-0 p-4">
      <div class="row">
        <%- include('../partials/left-sidebar') %> 
        <div class="col-md-7 text-justify">
          <div class="card card-body">
            <span class="h2 d-block pb-3"> Add Old Paper </span>
            <div class="container">
              <div class="tab-content" id="nav-tabContent">
                <form action="" method="post">
                  <div class="form-group pt-3">
                    <label for="title"> Paper ID* </label>
                    <input
                      type="text"
                      class="form-control"
                      name="id"
                      required
                      placeholder="Enter Paper ID (Ex. - 2023012202)"
                      data-formInput
                    />
                    <small>Please maintain the format (yyyymmddxx)</small>
                  </div>
                  <div class="form-group">
                    <label for="title"> Title* </label>
                    <input
                      type="text"
                      class="form-control"
                      name="title"
                      required
                      placeholder="Title of your Article"
                      data-formInput
                    />
                  </div>
                  <div class="form-group">
                    <label for="typeSelect"> Type* </label>
                    <select name="type" class="custom-select mr-sm-2" id="typeSelect" data-formInput>
                      <% types.forEach(item => { %>
                        <option value="<%- item.id %>"><%- item.type %></option>
                      <% }) %>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="abstract"> Abstract* </label>
                    <textarea
                      name="abstract"
                      id="abstract"
                      class="form-control"
                      cols="30"
                      rows="5"
                      required
                      data-formInput
                      placeholder="Enter Abstract"
                    ></textarea>
                  </div>
                  <div class="form-group">
                    <label for="typeSelect"> Volume* </label>
                    <select name="volume" class="custom-select mr-sm-2" id="typeSelect" data-formInput>
                      <% volumes.forEach(item => { %>
                        <option value="<%- item.id %>"><%- item.title %></option>
                      <% }) %>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="title"> Page* </label>
                    <input
                      type="text"
                      class="form-control"
                      name="page"
                      required
                      placeholder="Page"
                      data-formInput
                    />
                    <small>Please maintain the format Ex.- (01-08)</small>
                  </div>
                  <div class="form-group">
                    <label for="title"> DOI* </label>
                    <input
                      type="text"
                      class="form-control"
                      name="doi"
                      required
                      placeholder="Enter DOI (Ex. - 10.1007/s12345-012-6789-0)"
                      data-formInput
                    />
                  </div>
                  <div class="form-group">
                    <label for="keywords"> Enter Keywords* </label>
                    <textarea
                      name="keywords"
                      id="keywords"
                      class="form-control"
                      cols="30"
                      rows="3"
                      placeholder="Ex. - key1, key2, key3"
                      required
                      data-formInput
                    ></textarea>
                  </div>
                  <div class="text-center pb-4" id="nextAuthors"> 
                    <button
                      class="btn btn-primary"
                    >Next</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        <%- include('../../partials/right-sidebar') %> 
      </div>
    </div>

    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/app.js"></script>
  </body>
</html>

<%- include('../../partials/head') %>
  <body class="bg-light">
    <%- include('../../partials/top-navbar') %> 
    <div class="container-fluid pt-4 px-md-0 p-4">
      <div class="row">
        <%- include('../partials/left-sidebar') %> 
        <div class="col-md-7 text-justify">
          <div class="card card-body">
            <div class="flex justify-start items-center gap-2 mb-2">
              <a href="/admin_panel/editorial/view" class=" bg-gray-200 p-2 text-gray-700 rounded-sm border-2 border-gray-300">
                <i class="fa-solid fa-arrow-left"></i>
                <span class="text-gray-700">Back</span>
              </a>
              <div class="h4 d-block">Volume: <%- volume %></div>
            </div>
            <hr>

            <% if(editorials.length === 0){ %>
              <div class="mt-2 bg-light border border-gray-300 px-3 py-2 flex flex-col justify-start items-start w-full rounded-sm mb-2">
                <span class="text-xl text-justify text-gray-800">No editorials found</span>
              </div>
            <% } %>

            <% if(editorials.length > 0){ %>
              <div class="mt-2 mb-1 bg-sky-200 text-blue-900 w-full p-2">
                <span class="text-lg font-semibold">Editorials</span>
              </div>

              <% editorials.forEach(item => { %>
                <div class="bg-light border border-gray-300 px-3 py-2 flex flex-col justify-start items-start w-full rounded-sm mb-2">
                  <a href="/admin_panel/editorial/<%- item.id %>" class="text-xl text-justify text-sky-600"><%- item.title %></a>
                  <% if(item.description.length > 0){ %>
                    <p>
                      <% if(item.description.length > 200){ %>
                        <span><%- item.description.substr(0, 200) %></span>....
                        <a href="/admin_panel/editorial/<%- item.id %>" class="text-sky-600">Read More>> </a>
                      <% } else { %>
                        <span class="text-gray-600">
                          <%- item.description %>
                        </span>
                      <% } %>
                    </p>
                  <% } %>

                  <div class="w-full flex justify-start items-center gap-2 my-2">
                    <a href="/admin_panel/editorial/<%- item.id %>" class="btn btn-warning text-yellow-900 flex justify-start items-center gap-2"><i class="fa-solid fa-book-open"></i> <span class="hidden lg:block">Read Editorial</span></a>
                    <a href="/admin_panel/editorial/delete/<%- item.id %>?return_vol=<%- item.volume %>" role="button" class="btn btn-danger flex justify-start items-center gap-2"><i class="fa-solid fa-trash"></i> <span class="hidden lg:block">Delete</span></a>
                  </div>
                </div>
              <% }) %>
            <% } %>
          </div>
        </div>
        <%- include('./right-sidebar') %> 
      </div>
    </div>
    
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/app.js"></script>
  </body>
</html>

<%- include('../partials/head') %>
  <body class="bg-light">
        <!-- This is success animation modal  -->
        <div id="success" class="opacity-0 pointer-events-none fixed top-0 right-0 h-screen flex w-full justify-center items-center bg-black/40 z-50 transition-all duration-75 ease-in">
          <div class="relative bg-white border border-gray-300 rounded w-72 h-auto py-8 flex flex-col justify-center items-center">
            <div class="success-checkmark">
              <div class="check-icon">
                <span class="icon-line line-tip"></span>
                <span class="icon-line line-long"></span>
                <div class="icon-circle"></div>
                <div class="icon-fix"></div>
              </div>
            </div>
            <div>
              <span class="message">Mail sent to Reviewer</span>
            </div>
          </div>
        </div>
        <!-- End of success animation modal  -->
    <%- include('../partials/top-navbar') %> 
    <div class="container-fluid pt-4 px-md-0 p-4">
      <div class="row">
        <%- include('../partials/left-sidebar') %> 
        <div class="col-md-7 pb-4 text-justify d-flex align-items-center justify-content-center">
          <div class="card rounded max-width-400">
            <div class="card-body rounded">
              <h2 class="text-center pb-2 text-xl lg:text-3xl font-medium">Register</h2>
              <hr class="w-50 mx-auto bgLightBlue" />
              <form action="#">
                <div class="form-group">
                  <div class="form-group pt-3">
                    <label for="name"><i class="fas fa-user"></i> Name* </label>
                    <div class="w-full flex justify-between items-center gap-4">
                      <input
                        type="text"
                        name="first_name"
                        class="form-control"
                        id="f_name"
                        required
                        placeholder="First Name*"
                        required
                        data-regFormInput
                      />
                      <input
                        type="text"
                        name="middle_name"
                        class="form-control"
                        id="m_name"
                        placeholder="Middle Name"
                        data-regFormInput
                      />
                      <input
                        type="text"
                        name="last_name"
                        class="form-control"
                        id="l_name"
                        required
                        placeholder="Last Name*"
                        required
                        data-regFormInput
                      />
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label for="email">
                    <i class="fas fa-envelope"></i> Email*
                  </label>
                  <input type="text" name="email" class="form-control" id="email" required data-regFormInput />
                </div>
                <div class="form-group">
                  <label for="password">
                    <i class="fas fa-lock"></i> Password*
                  </label>
                  <input
                    type="password"
                    name="password"
                    class="form-control"
                    id="password"
                    required
                    data-regFormInput
                  />
                </div>
                <div class="form-group">
                  <label for="password2">
                    <i class="fas fa-lock"></i> Retype Password*
                  </label>
                  <input
                    type="password"
                    name="c_password"
                    class="form-control"
                    id="password2"
                    required
                    data-regFormInput
                  />
                </div>
                <div class="form-group d-flex justify-content-center">
                  <button id="regbtn" class="btn bg-primary text-white w-50 btn-hover"><div id="spinner" class="hidden spinner-border text-light h-5 w-5 mr-2" role="status"></div>Register</button>
                </div>
              </form>
              <h6 class="text-center py-3 font-semibold">
                Already have an account. <a href="/login" class="text-primary">Login now</a>
              </h6>
            </div>
          </div>
        </div>
        <%- include('../partials/right-sidebar') %> 
      </div>
    </div>
    <%- include('../partials/footer') %>
    <script src="/js/modules/register/register.script.js" type="module"></script>
    <script src="/js/floating-success-menu.js" type="module"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/app.js"></script>
  </body>
</html>

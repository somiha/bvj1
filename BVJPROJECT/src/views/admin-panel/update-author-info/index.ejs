    <script type="module">
      import { showSuccessMenu, showSuccessMessage, showErrorMessage } from "/js/floating-success-menu.js";
      var authorID, formData = {}, flag = 0;
      const searchBtn = document.querySelector("[data-search-author]");
      const searchInput = document.querySelector("#searchByEmail");
      const infoContainer = document.querySelector("[data-info-container]");
      const updateBtn = document.querySelector("[data-update-author]");

      function populateData(data) {
        document.querySelector("#f_name").value = data.first_name;
        document.querySelector("#m_name").value = data.middle_name;
        document.querySelector("#l_name").value = data.last_name;
        document.querySelector("#email").value = data.email;
        document.querySelector("#mobile_no").value = data.mobile_no;
        document.querySelector("#country").value = data.country;
        document.querySelector("#affiliation").value = data.affiliation;
        document.querySelector("#website").value = data.website;
        document.querySelector("#address").value = data.address;
      }
      searchBtn.addEventListener("click", () => {
        const email = searchInput.value;
        fetch('/api/search_author?q=' + email)
          .then(res => res.json())
          .then(data => {
            console.log(data);
            authorID = data.data.id;
            populateData(data.data);
            infoContainer.classList.remove("hidden");
          })
      });

      /* @Form Data Change and Store */
      const inputFields = document.querySelectorAll('[data-formInput]');
      inputFields.forEach((item) => {
        item.addEventListener('change', () => {
          flag = 1;
          formData[item.name] = item.value;
        })
      })
      /* END:@Form Data Change and Store */

      /* @Update Author */
      updateBtn.addEventListener('click', () => {
        if (flag) {
          formData.id = authorID;
          fetch('/admin_panel/update_author_info', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify(formData)
          })
            .then(res => res.json())
            .then(data => {
              if(data.success){
                showSuccessMenu();
                showSuccessMessage('Author Updated Successfully');
                setTimeout(() => {
                  window.location.reload();
                }, 1500);
              } else {
                showSuccessMenu();
                showErrorMessage('Something Went Wrong');
                setTimeout(() => {
                  window.location.reload();
                }, 1500);
              }
            })
        } else {
          alert("No Changes Found");
        }
      })

    </script>

